<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

  <TextView
      android:id="@+id/lblWelcome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:text="WELCOME"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"

      app:layout_constraintTop_toTopOf="parent" />
      
      <!--
      
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0.0"
      android:layout_marginStart="173dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="168dp"
      android:layout_marginBottom="684dp"
      -->

  <TextView
      android:id="@+id/lblName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Name:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblWelcome"/>
      <!-- 
      
      app:layout_constraintBottom_toBottomOf="parent"
      
      app:layout_constraintVertical_bias="0.0" 
      android:layout_marginStart="28dp"
      android:layout_marginTop="76dp"
      android:layout_marginBottom="636dp"
      -->

  <TextView
      android:id="@+id/txtName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="null"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/lblName"
      app:layout_constraintTop_toBottomOf="@+id/lblWelcome"
      app:layout_constraintVertical_bias="0.0" />
      
      <!--
      
      android:layout_marginStart="24dp"
      android:layout_marginTop="76dp"
      android:layout_marginEnd="296dp"
      android:layout_marginBottom="636dp"
      -->

  <Button
      android:id="@+id/btnSelectStore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Select Store"
      
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"    
      app:layout_constraintBottom_toBottomOf="parent"  
      app:layout_constraintVertical_bias="0.3" />
<!--

      android:layout_marginTop="185dp"
      android:layout_marginBottom="451dp"
-->
  <Button
      android:id="@+id/btnHistory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Order History"
      
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" 
      app:layout_constraintVertical_bias="0.6	"/>
      <!--
      
      android:layout_marginTop="137dp"
      android:layout_marginBottom="265dp"
      -->
      
      <!-- Remove button below after implementing startactivity in select store button-->
       <Button
      android:id="@+id/btnTempStore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Temporary Mayet Store"
      
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"    
      app:layout_constraintBottom_toBottomOf="parent"  
      app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
