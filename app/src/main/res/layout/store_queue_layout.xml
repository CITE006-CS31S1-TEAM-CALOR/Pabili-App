<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/HEADERstoreCustomerName"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3E91C5E8"
        android:gravity="center"
        android:text="Customer Name"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/HEADERstoreCustomerDate"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Date"
        android:layout_margin="7dp"
        android:textColor="#000000"
        app:fontFamily="sans-serif-thin" />

    <Button
        android:id="@+id/HEADERstoreCustomerAction"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:background="@drawable/btn_main_1"
        android:text="Evaluate"
        app:backgroundTint="#0091ea"
        app:backgroundTintMode="screen" />
</LinearLayout>