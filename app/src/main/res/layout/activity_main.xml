<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <LinearLayout 
        android:id="@+id/lnStoreDetail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
            android:layout_height="wrap_content"
            android:text="Store:"
            android:layout_width="wrap_content"
            android:textSize="15dp"/>

            <TextView
            android:id="@+id/tvStorename"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Not yet selected"/>

            <ImageView
            android:id="@+id/btnAddStore"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_edit"/>
        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lnStoreDetail"/>


        <TextView
            android:id="@+id/lblTotal"
            android:text="Total: Php "
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitOrder"
        />
        <TextView
            android:id="@+id/tvTotal"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="0.00"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmitOrder"
            app:layout_constraintStart_toEndOf="@+id/lblTotal"
        />
        <Button 
            android:id="@+id/btnSubmitOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Submit Order"/>
        

</androidx.constraintlayout.widget.ConstraintLayout>
